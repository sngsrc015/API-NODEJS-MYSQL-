<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script></head>

<body>
<div class="container">
    <h1>CRUD OPERATION</h1>
    
    <a href="/show/create" class="btn btn-success">Create Product</a><br>
    <table width="100%" class="centered" >
     
        <thead>  <tr>
          <th>ID</th>
          <th>PRODUCT NAME</th>
          <th>PRICE</th>
          <th>SKU</th>
          <th>update/delete</th> 


        </tr>
      </thead>
          <tbody id="body1">
        
        </tbody>
      </table>
<div><%=msg%></div>
      

    
   
</div>

</body>

<script>
  $(document).ready(function(){
$.getJSON('/show/fetchdata',function(data){
data.map(item=>{
  $(body1).html($(body1).html()+`
  
  <tr>
            <td >${item.id}</td>
                <td>${item.productname}</td>
                <td>${item.price}</td>
                <td>${item.sku}</td>
                <td>
                    <a href="/show/edit?id=${item.id}" class="btn btn-info btn-sm">Edit</a>
                    <a href="/show/delete?id=${item.id}" class="btn btn-danger btn-sm">Delete</a>
                </td>
          </tr>
  `)
})
})
})
</script>

 <!--JavaScript at end of body for optimized loading-->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script> 
 
</html>